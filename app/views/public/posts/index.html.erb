<div class="post-container">
  <div class="main-content">
    <% @posts.each do |post| %>
    <div class="post-box">
      <div class="post-image-box">
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, class: "post-image" %>
        <% end %>
      </div>
      <div class="post-top">
    
        <%= post.cafe_name %>
      </div>
      <div class="post-bottom">
        <div class="user-info">
          <%= attachment_image_tag post.user, :profile_image, fallback: "no_image.jpeg", class: "post-profile-image" %>
          <%= link_to "#{post.user.name}", user_path(post.user), class: "user-name" %>&nbsp;
        </div>
        <!-- いいね・コメントマーク -->
        <span id="likes_btn_<%= post.id %>">
          <%= render partial: 'public/likes/like_btn', locals: {post: post} %>
        </span>
        <%= link_to post_path(post) do %>
          <i class="far fa-comment"></i>&nbsp;<%= post.comments.count %>
        <% end %>
      </div>
      <div class="post-date">
        <%= post.created_at.strftime('%F') %>&nbsp;
        <%= post.created_at.strftime('%H:%M') %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="post-container">
  <div class="paginate-box">
    <%= paginate @posts %>
  </div>
</div>