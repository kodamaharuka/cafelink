<!-- members/edit・contacts/newのクラスを引用 -->
<h3 class="page-heading">投稿</h3>
<div class="my-page-edit">
  <div class="edit-profile">
    <%= form_with model: @post, local: true do |f| %>
    <%#= render 'layouts/errors', model: @post %>
      <%= f.label :"画像" %><br>
      <p><%#= f.attachment_field :image %></p>
      
      <%= f.label :"タイトル" %><br>
      <p><%= f.text_field :title, placeholder: "タイトルやお店の名前", class: "edit-profile-form" %></p>
      
      <%= f.label :"つぶやき", class: "contacts-form"%><br>
      <p><%= f.text_area :introduction, class: "edit-profile-form" %></p>
      <%= f.submit '投稿', class: "edit-profile-btn" %>
    <% end %>

  </div>
</div>