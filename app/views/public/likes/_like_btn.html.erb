<% if user_signed_in? %>
  <% if post.post_liked_by?(current_user) %>
    <%= link_to post_likes_path(post), method: :delete, remote: true do %>
      <i class="fas fa-apple-alt" aria-hidden="true" style="color: #ea5550;"></i>
      <%= post.likes.count %>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post), method: :post, remote: true do %>
      <i class="fas fa-apple-alt" aria-hidden="true" style="color: #4e454a;"></i>
      <%= post.likes.count %>
    <% end %>
  <% end %>
<% end %>&nbsp;