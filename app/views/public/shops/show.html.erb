<div class="show-shop-container">
  <div class="show-shop-top">
    <span class="show-shop-name"><%= @cafe_name %><p class="shop-text">&emsp;/&emsp;<%= @shop.genre.name %></p></span>
  </div>
  <div class="show-main-image">
    <%= attachment_image_tag @shop, :image, class: "main-image" %>
  </div>

  <hr class="border-sm">
  <div class="shop-caption">
    <h5>店鋪紹介</h5>
    <%= simple_format(@shop.introduction) %>
  </div>
  <hr class="border-sm">
  <div class="shop-info">
    <h5>店鋪情報</h5>
    <table class="table shop-table">
      <tbody>
        <tr>
          <th width="100" style="background: #fefae6;">住所</th>
          <td><%= @shop.address %></td>
        </tr>
        <tr>
          <th width="100" style="background: #fefae6;">電話番号</th>
          <td><%= @shop.phone_number %></td>
        </tr>
        <tr>
          <th width="100" style="background: #fefae6;">営業時間</th>
          <td><%= @shop.business_hours %></td>
        </tr>
        <tr>
          <th width="100" style="background: #fefae6;">定休日</th>
          <td><%= @shop.regular_holiday %></td>
        </tr>
        <tr>
          <th width="100" style="background: #fefae6;">アクセス</th>
          <td><%= @shop.nearest_station %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>