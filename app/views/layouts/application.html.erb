<!DOCTYPE html->
<html>
  <head>
    <title>Cafelink</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!--スマホでPCサイトが表示されないよう、初期倍率を指定する-->
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload', 'data-turbolinks-eval': false %>
    <script src="https://kit.fontawesome.com/ff199016f3.js" crossorigin="anonymous"></script>
  </head>
  
  <div class="row p-0 m-0">
  <div class="head-search col-lg-12 p-0 m-0">
    <%# if admin_signed_in? %>
      <%#= render 'admin/homes/' %>
    <%# else %>
      <%#= render 'public/users/search_form' %>
    <%# end %>
  </div>
  
  <header>
    <%= link_to image_tag("logo22.png", class: "logo"), "/" %>
    <!--<nav class="navbar navbar-expand p-3">-->
    <nav class="navbar navbar-expand p-3">
      <!-- レスポンシブ対応時のハンバーガーメニュー用ー -->
      <ul class="navbar-nav ml-auto" id="sp-menu">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "マイページ", user_path(current_user) %>
          </li>
          <li class="nav-item">
            <%= link_to "投稿", post_path(id: current_user.id) %>
          </li>
          <li class="nav-item">
            <%= link_to "店舗一覧", shops_path %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </li>
        <% elsif admin_signed_in? %>
        　<li class="nav-item">
        　  <%= link_to "ジャンル", admin_genres_path %>
        　</li>
          <li class="nav-item">
            <%= link_to "店舗登録", new_admin_shop_path %>
          </li>
          <li class="nav-item">
            <%= link_to "店舗一覧", admin_shops_path %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path %>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path %>
          </li>
          <li class="nav-item">
            <%= link_to "店舗一覧", shops_path %>
          </li>
        <% end %>
      </ul>
      <!-- パソコン画面用のヘッダー -->
      <ul class="navbar-nav ml-auto" id="desktop-menu">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "マイページ", user_path(current_user), class: "btn btn-outline-light btn-sm ml-3"  %>
          </li>
          <li class="nav-item">
            <%= link_to "新規投稿", new_post_path, class: "btn btn-outline-light btn-sm ml-3"  %>
          </li>
          <li class="nav-item">
            <%= link_to "投稿一覧", posts_path, class: "btn btn-outline-light btn-sm ml-3"  %>
          </li>
          <li class="nav-item">
            <%= link_to "店舗一覧", shops_path, class: "btn btn-outline-light btn-sm ml-3" %>
          </li>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-light btn-sm ml-3" %>
          </li>
        <% elsif admin_signed_in? %>
        　<li class="nav-item">
        　  <%= link_to "ジャンル", admin_genres_path, class: "btn btn-outline-light btn-sm ml-3" %>
        　</li>
          <li class="nav-item">
            <%= link_to "店舗登録", new_admin_shop_path, class: "btn btn-outline-light btn-sm ml-0" %>
          </li>
          <li class="nav-item">
            <%= link_to "店舗一覧", admin_shops_path, class: "btn btn-outline-light btn-sm ml-3" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-light btn-sm ml-3" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-light btn-sm ml-3" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-light btn-sm ml-3" %>
          </li>
          <li class="nav-item">
            <%= link_to "店舗一覧", admin_shops_path, class: "btn btn-outline-light btn-sm ml-3" %>
          </li>
        <% end %>
      </ul>
    </nav>
    <!-- ハンバーガーアイコン用の表記 -->
    <div id="hm-icon">
      <a class="menu-trigger" href="">
        <span></span>
        <span></span>
        <span></span>
      </a>
    </div>
  </header>

  <body>
    <div class="main">
      <%= render 'layouts/flash' %>
      <%= yield %>
    </div>
  </body>

  <footer>
    <span class="footer-text">©cafelink</span>&nbsp;
  </footer>
</html>