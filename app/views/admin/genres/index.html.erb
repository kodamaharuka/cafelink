<h1>Genres#index</h1>
<p>Find me in app/views/genres/index.html.erb</p>

<div class="container">
  <div class="row">
    <!-- カテゴリーの新規登録フォーム -->
    <div class="col-lg-4">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
         <div class="genre-title">
           <%= f.label "ジャンル登録" %>
         </div>
         <div style="font-size: 20px;">
           <%= render "layouts/error_messages", model: @genre %>
         </div>
         <div>
           <%= f.text_field :name, placeholder: "ここに入力", class: "form-control" %>
         </div>
         <div class="form-btn">
           <%= f.submit "登録する", class: "btn btn-outline-secondary btn-lg ml-3 mt-3" %>
         </div>
      <% end %>
    </div>
    <div class="col-lg-2"></div>
    <!-- ジャンル一覧表示 -->
    <div class="col-lg-6">
      <p class="genre-index-title">ジャンル一覧</p>
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th class=""></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-secondary" %>
              </td>
            </tr>
          <% end %>
        </tbody>

        <tfoot>
        </tfoot>
      </table>
    </div>
  </div>
</div>